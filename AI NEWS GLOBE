        <i class="fas fa-user-shield"></i>
    </button>

    <script>
        // Category filtering functionality
        document.addEventListener('DOMContentLoaded', function() {
            const navLinks = document.querySelectorAll('nav a');
            const categoryBtns = document.querySelectorAll('.category-btn');
            const newsCards = document.querySelectorAll('.news-card');
            const adminSection = document.getElementById('admin-section');
            const adminToggle = document.getElementById('admin-toggle');
            
            // Function to filter news by category
            function filterNews(category) {
                newsCards.forEach(card => {
                    if (category === 'all' || card.getAttribute('data-category') === category) {
                        card.style.display = 'block';
                    } else {
                        card.style.display = 'none';
                    }
                });
                
                // Update active states
                navLinks.forEach(link => {
                    if (link.getAttribute('data-category') === category) {
                        link.classList.add('active');
                    } else {
                        link.classList.remove('active');
                    }
                });
                
                categoryBtns.forEach(btn => {
                    if (btn.getAttribute('data-category') === category) {
                        btn.classList.add('active');
                    } else {
                        btn.classList.remove('active');
                    }
                });
            }
            
            // Add click event listeners to navigation links
            navLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    const category = this.getAttribute('data-category');
                    filterNews(category);
                });
            });
            
            // Add click event listeners to category buttons
            categoryBtns.forEach(btn => {
                btn.addEventListener('click', function() {
                    const category = this.getAttribute('data-category');
                    filterNews(category);
                });
            });
            
            // Admin toggle functionality
            adminToggle.addEventListener('click', function() {
                adminSection.classList.toggle('active');
                
                // Scroll to admin section if it's being shown
                if (adminSection.classList.contains('active')) {
                    adminSection.scrollIntoView({ behavior: 'smooth' });
                }
            });
            
            // Simulate AI updating content
            function updateNewsTicker() {
                const statusElement = document.querySelector('.update-status span');
                const originalText = "AI is actively updating news content";
                const updatedText = "AI just updated 3 news stories";
                
                // Toggle between two status messages
                if (statusElement.textContent === originalText) {
                    statusElement.textContent = updatedText;
                } else {
                    statusElement.textContent = originalText;
                }
            }
            
            // Change status every 10 seconds
            setInterval(updateNewsTicker, 10000);
            
            // Simulate content updates by changing some text after page load
            setTimeout(() => {
                const titles = document.querySelectorAll('.news-title');
                if (titles.length > 0) {
                    // Change one title to show "fresh" content
                    titles[0].textContent = "Climate Summit Reaches New Agreement on Emissions";
                }
            }, 5000);

            // Add interactivity to news cards
            document.querySelectorAll('.news-card').forEach(card => {
                card.addEventListener('click', function() {
                    alert('This news story would open in a detailed view with the full AI-generated article.');
                });
            });

            // Theme toggle functionality
            const themeToggle = document.querySelector('.theme-toggle');
            themeToggle.addEventListener('click', function() {
                document.body.classList.toggle('dark-mode');
                const icon = themeToggle.querySelector('i');
                if (document.body.classList.contains('dark-mode')) {
                    icon.classList.remove('fa-moon');
                    icon.classList.add('fa-sun');
                } else {
                    icon.classList.remove('fa-sun');
                    icon.classList.add('fa-moon');
                }
            });

            // Initialize AdSense ads
            // This would normally be handled by AdSense automatically
            // We're just simulating the ad loading process
            const adPlaceholders = document.querySelectorAll('.ad-banner, .ad-sidebar, .ad-inline');
            adPlaceholders.forEach(ad => {
                setTimeout(() => {
                    ad.innerHTML = '<div style="padding: 20px; text-align: center; color: #666;">Advertisement<br><small>Ad would be displayed here</small></div>';
                }, 1000);
            });
        });
    </script>
</body>
